rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /generatedDocuments/{docId} {
      // A user can create a document if they are logged in and the userId on the new document matches their own.
      allow create: if request.auth.uid != null && request.resource.data.userId == request.auth.uid;
      
      // A user can read, update, or delete their own documents.
      // This rule also covers list queries that are properly filtered by userId.
      allow read, update, delete: if request.auth.uid != null && resource.data.userId == request.auth.uid;
    }
  }
}
