
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access to all documents
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read and write their own documents
    // in the 'generatedDocuments' collection.
    match /generatedDocuments/{docId} {
      // A user can create a document if the new document's userId
      // matches their own UID.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // A user can read, update, or delete their own documents.
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
